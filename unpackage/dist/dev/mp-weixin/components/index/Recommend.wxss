
.recommend {
	padding: 20rpx;
}
.recommend-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	border-radius: 20rpx;
	border: 2rpx solid #CCCCCC;
	overflow: hidden;
	margin: 20rpx 0;
}
.item-big {
	width: 100%;
	height: 300rpx;
}
.item-small {
	width: 100%;
	height: 240rpx;
}
.item-img {
	width: 33.3333%;
	height: 240rpx;
}

